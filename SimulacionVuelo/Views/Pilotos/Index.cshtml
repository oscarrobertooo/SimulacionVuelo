@model IEnumerable<Piloto>
@{
    ViewData["Title"] = "Index";
}

<h2 class="display-4" >Pilotos en el sistema</h2>
<button class="btn btn-primary" type="button" style="margin-left:88.5%"><a asp-area="" asp-controller="Pilotos" asp-action="Agregar" style="color: white; text-decoration: none">Agregar Piloto</a></button>
<table class="table table-striped table-hover" style="margin-top:70px">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Peso</th>
            <th scope="col">Altura</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var piloto in Model)
        {
            <tr>
                <th scope="row">@piloto.Id</th>
                <td>@piloto.nombre</td>
                <td>@piloto.peso</td>
                <td>@piloto.altura</td>
            </tr>

        }
    </tbody>
</table>

