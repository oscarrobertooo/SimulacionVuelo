@model Piloto
@{
    ViewData["Title"] = "Agregar";
}

<h2 class="display-4">Agregar piloto</h2>
<form method="POST">
  <div class="form-group">
    <label asp-for="nombre">Nombre:</label>
    <input asp-for="nombre" class="form-control" placeholder="Ingresa tu nombre">
  </div>
  <div class="form-group">
    <label asp-for="peso">Peso:</label>
    <input asp-for="peso" type="number" step="any" class="form-control" placeholder="Ingresa tu peso en kg">
  </div>
  <div class="form-group">
    <label asp-for="altura">Altura:</label>
    <input asp-for="altura" type="number" step="any" class="form-control" placeholder="Ingresa tu altura en metros">
  </div>
  <button type="submit" class="btn btn-primary" style="margin-top:10px">Enviar</button>
</form>



