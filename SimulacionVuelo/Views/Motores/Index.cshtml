@model IEnumerable<Motor>
@{
    ViewData["Title"] = "Index";
}

<h2 class="display-4">Motores en el sistema</h2>
<button class="btn btn-primary" type="button" style="margin-left:88.5%"><a asp-area="" asp-controller="Motores" asp-action="Agregar" style="color: white; text-decoration: none">Agregar Motor</a></button>
<table class="table table-striped table-hover" style="margin-top:70px">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Comburente</th>
            <th scope="col">Combustible</th>
            <th scope="col">Estado Combustible</th>
            <th scope="col">Eficiencia del Combustible</th>
            <th scope="col">Oxigeno por segundo</th>
            <th scope="col">Combustible por segundo</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var motor in Model)
        {
            <tr>
                <th scope="row">@motor.Id</th>
                <td>@motor.nombre</td>
                <td>@motor.comburente</td>
                <td>@motor.Combustible.nombre</td>
                <td>@motor.Combustible.estado</td>
                <td>@motor.eficienciaCombustible</td>
                <td>@motor.oxigenoPorSegundo</td>
                <td>@motor.combustiblePorSegundo</td>
            </tr>

        }
    </tbody>
</table>

