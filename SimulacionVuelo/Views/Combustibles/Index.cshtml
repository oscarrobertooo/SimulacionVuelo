@model IEnumerable<Combustible>
@{
    ViewData["Title"] = "Index";
}

<h2 class="display-4">Combustibles en el sistema</h2>
<button class="btn btn-primary" type="button" style="margin-left:88.5%"><a asp-area="" asp-controller="Combustibles" asp-action="Agregar" style="color: white; text-decoration: none">Agregar Combustible</a></button>
<table class="table table-striped table-hover" style="margin-top:70px">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Estado</th>
       
        </tr>
    </thead>
    <tbody>

        @foreach (var combustible in Model)
        {
            <tr>
                <th scope="row">@combustible.Id</th>
                <td>@combustible.nombre</td>
                <td>@combustible.estado</td>
            </tr>

        }
    </tbody>
</table>

