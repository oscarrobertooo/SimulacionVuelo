<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Simulacion Vuelo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SimulacionVuelo.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Simulacion Vuelo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Simulación</a>
                        </li>
                        <li class="nav-item">
                          
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Catalagos
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Combustibles" asp-action="Index">Combustibles</a></li>
                                    <li><a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Pilotos" asp-action="Index">Pilotos</a></li>
                                    <li><a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Motores" asp-action="Index">Motores</a></li>
                                    <li><a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Naves" asp-action="Index">Naves</a></li>
                                    <li><a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Planetas" asp-action="Index">Planetas</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
    $(document).ready(function () {
        $("#myButton").click(function () {
            $("#myDiv").slideToggle();
        });
    });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
