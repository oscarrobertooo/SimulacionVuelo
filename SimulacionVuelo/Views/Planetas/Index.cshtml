@model IEnumerable<Planeta>
@{
    ViewData["Title"] = "Index";
}

<h2 class="display-4">Planetas en el sistema</h2>
<button class="btn btn-primary" type="button" style="margin-left:88.5%"><a asp-area="" asp-controller="Planetas" asp-action="Agregar" style="color: white; text-decoration: none">Agregar Planeta</a></button>
<table class="table table-striped table-hover" style="margin-top:70px">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Clima</th>
            <th scope="col">Longitud</th>
            <th scope="col">Latitud</th>
            <th scope="col">Altitud</th>
            <th scope="col">Distancia a la Tierra (km)</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var planeta in Model)
        {
            <tr>
                <th scope="row">@planeta.Id</th>
                <td>@planeta.nombre</td>
                <td>@planeta.clima</td>
                <td>@planeta.longitud</td>
                <td>@planeta.latitud</td>
                <td>@planeta.altitud</td>
                <td>@planeta.distaciaDeLaTierra</td>
            </tr>

        }
    </tbody>
</table>

